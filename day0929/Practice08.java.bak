//1부터 7까지의 합은 ---입니다.

import java.util.Scanner;
class Practice08
{
	public static void main(String[] args) 
	{
		Scanner sc = new Scanner(System.in);

		int n,sum=0;
		int i;
		System.out.print("1부터 어떤수까지 더할까요?==>");
		n=sc.nextInt();

		for( i=1  ;  i<=n ; i++ ){
		   sum += i; 
		}

		System.out.println("1부터 "+n+"까지의 값은 "+ sum+" 입니다.");
	
	}
} 